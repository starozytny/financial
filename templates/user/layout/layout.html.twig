{% extends 'dashboard/layout/layout_user.html.twig' %}

{% set page_prefix = "Espace membre" %}
{% set menu = [
    {
        'path': path('user_homepage'),
        'icon': 'home',
        'label': 'Dashboard',
        'name': 'espace-membre'
    },
    {
        'path': path('user_categories'),
        'icon': 'tag',
        'label': 'Catégories',
        'name': 'catégories'
    },
    {
        'path': path('user_saving'),
        'icon': 'tag',
        'label': 'Economies',
        'name': 'economies'
    },
    {
        'path': path('user_profil'),
        'icon': 'user',
        'label': 'Mon profil',
        'name': 'profil'
    }
] %}

{% set menuBottom = [
    {
        'path': path('app_homepage'),
        'icon': 'earth',
        'label': 'Page accueil',
        'name': 'accueil'
    },
    {
        'path': path('app_logout'),
        'icon': 'eject',
        'label': 'Se déconnecter',
        'name': 'logout'
    }
] %}

{% if is_granted("ROLE_ADMIN") %}
    {% set menuAdd = [
        {
            'path': path('admin_homepage'),
            'icon': 'earth',
            'label': 'Espace admin',
            'name': 'admin'
        }
    ]%}
    {% set menuBottom = menuAdd | merge(menuBottom) %}
{% endif %}

{% block footer %}
    {% include "app/layout/components/footer.html.twig" %}
{% endblock %}